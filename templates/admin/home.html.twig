     	         <span>G√©rer les ventes</span>
     	     </a>
     	</div>
		<div class="card shadow-lg rounded-4 border-0 mb-4 ms-3">
		<div class="card-header py-4 text-white text-center" style="background: linear-gradient(90deg, #4e73df 0%, #1cc88a 100%);">
			<h5 class="m-0 fw-bold">
			üìä √âtat des stocks
			</h5>
		</div>
		<div class="card-body p-4" style="height: 300px;">
			<canvas id="graphiqueProduits"
					data-labels='{{ labels}}'
					data-stocks='{{ stocks }}'
					data-colors='{{ colors}}'>
			</canvas>
		</div>
		</div>
		<div class="table-data">
			<div class="order">
				<div class="head">
					<h3>Ventes r√©centes</h3>
					<i class='bx bx-search' ></i>
					<i class='bx bx-filter' ></i>
				</div>
				<table>
					<thead>
						<tr>
							<th>Patient</th>
							<th>Date </th>
							<th>Status</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for vente in ventes %}
							<tr>
								<td>
									{% if vente.user.image %}	
										<img src="/image/users/{{vente.user.image}}" alt="">
									{% else %}
										<img src="/image/users/default.jpg" alt="">
									{% endif %}
									<p>{{ vente.user.nom }} {{ vente.user.prenom }}</p>
								</td>
								<td>{{ vente.createdAt | date}}</td>
								<td>
									<span class="status pending">
										complet√©
									</span>
								</td>
								<td><a class="btn btn-sm btn-primary" href="{{path('admin.ventes.detail', {id: vente.id})}}">D√©tails</a></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% block javascripts %}
    <script src="{{ asset('script/graphe.js') }}"></script>
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	

{% endblock %}

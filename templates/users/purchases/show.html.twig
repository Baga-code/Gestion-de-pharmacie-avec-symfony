{% extends 'user.html.twig' %}

{% block title %}Achat N° {{ vente.id }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/details.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}

{% block body %}
    <div class="invoice-box">
        <header>
            <h1>FACTURE</h1>
            <div class="invoice-info">
                <div class="invoice-number">Facture n°{{ vente.id }}</div>
                <div class="invoice-date">{{ vente.createdAt | date('Y-m-d H:i:s') }}</div>
            </div>
        </header>
        <section class="address-info">
            <div class="from">
                <h2>{{ vente.user.nom }} {{ vente.user.prenom }}</h2>
                {{ vente.user.email }}<br>
                <p><strong>Adresse :</strong> {{ vente.user.adresse }}</p>
            </div>
        </section>
        <section class="invoice-details">
            <table>
                <thead>
                    <tr>
                        <th>MÉDICAMENT</th>
                        <th>PRIX UNITAIRE</th>
                        <th>QUANTITÉ</th>
                        <th>TOTAL</th>
                    </tr>
                </thead>
                <tbody>
                    {% for detail in vente.details %}
                        <tr>
                            <td>{{ detail.medicament.nom }}</td>
                            <td>{{ detail.medicament.prix | number_format(0, ',', ' ') }} FCFA</td>
                            <td>{{ detail.nombre }}</td>
                            <td class="fw-bolder">{{ (detail.nombre * detail.medicament.prix) | number_format(0, ',', ' ') }} FCFA</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>
        <section class="totals">
            <p class="total">TOTAL : <span>{{ vente.total | number_format(0, ',', ' ') }} FCFA</span></p>
        </section>
        <footer>
            <p class="thanks">MERCI DE VOTRE CONFIANCE</p>
            <a href="{{ path('users.purchases.index') }}" class="btn btn-primary mt-3">Retour</a>
        </footer>
    </div>
    <script src="{{ asset('script/facture.js') }}"></script>
{% endblock %}
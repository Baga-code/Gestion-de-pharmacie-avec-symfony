{% block title %} DASHBOARD | ADMIN {% endblock %}
{% block stylesheets %}
     <link rel="stylesheet" href="{{asset('styles/user.css')}}">
{% endblock %}
{% block body %}

	<div class="dashboards">
		<div class="cards m-0">
     	     <a style="text-decoration: none;" href="{{path('admin.medicament')}}" class="card blue">
     	         <h3>M√©dicaments</h3>

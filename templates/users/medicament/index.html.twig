{% extends 'user.html.twig' %}
{% block title %}Médicaments{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/index.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/user.css') }}">
{% endblock %}
{% block body %}
    <div class="containers container">
        <div class="container d-flex align-items-center justify-content-center flex-column">
            <div class="container my-3">
                {% for type, message in app.flashes %}
                    <div class="d-flex align-items-center alert alert-{{ type }}">{{ message }}</div>
                {% endfor %}
            </div>
            <div class="container flex-column d-flex align-items-center justify-content-between gap-4 mb-2">
                <h2 class="align-self-start" style="letter-spacing:2px">Les <span style="border-bottom:2px solid rgb(9,181,9);">méd</span>icaments</h2>
                <form action="{{ path('users.medicament') }}" class="gap-2 align-self-start d-flex align-items-center justify-content-center flex-row">
                    <input id="limit" type="number" class="form-control" name="limit" value="{{ limit }}">
                    <input type="text" class="form-control" name="search" value="{{ search }}" placeholder="Rechercher...">
                    <select name="category" class="form-select">
                        <option {% if category_id == 1000 %}selected{% endif %} value="1000">Tous</option>
                        {% for category in categories %}
                            <option {% if category_id == category.id %}selected{% endif %} value="{{ category.id }}">{{ category.nom }}</option>
                        {% endfor %}
                    </select>
                    <input value="Rechercher" type="submit" class="btn btn-sm btn-outline-primary">
                </form>
            </div>
            <form action="{{ path('users.cart.add') }}" method="POST">
                <table class="container table table-striped table-hover table-bordered">
                    <thead style="text-align:center;">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Ordonnance</th>
                            <th scope="col">Catégorie</th>
                            <th scope="col">Disponibilité</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody style="text-align: center;">
                        {% for medicament in medicaments %}
                            <tr>
                                <td>{{ medicament.id }}</td>
                                <td>{{ medicament.nom }}</td>
                                <td class="fw-bold">{{ medicament.prix | number_format(0, ',', ' ') }} FCFA</td>
                                <td>
                                    {% if medicament.ordonnance %}
                                        <span class="ordonnance requireds">Requise</span>
                                    {% else %}
                                        <span class="ordonnance no-required">Sans ordonnance</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {{ medicament.category.nom|default('Non définie') }} {# Correction ici #}
                                </td>
                                <td class="text-{{ medicament.nombre > 0 ? 'success' : 'danger' }}">{{ medicament.nombre > 0 ? 'Disponible' : 'Indisponible' }}</td>
                                <td>
                                    {% if medicament.nombre > 0 %}
                                        <input type="number" name="quantities[{{ medicament.id }}]" value="1" min="1" max="{{ medicament.nombre }}" class="form-control d-inline-block w-25">
                                        <button type="submit" name="medicament_id" value="{{ medicament.id }}" class="btn btn-sm btn-primary"
                                            {% if medicament.ordonnance %}onclick="return confirm('Ce médicament nécessite une approbation médicale. Continuer ?')"{% endif %}>
                                            Ajouter au panier
                                        </button>
                                    {% else %}
                                        <span class="text-danger">Non disponible</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </form>
            <div class="container my-3 d-flex justify-content-between flex-row gap-1 align-items-center">
                <div class="fw-bolder">{{ count }} / {{ counts }}</div>
                <div class="d-flex justify-content-center flex-row gap-1 align-items-center">
                    {% for i in 1..maxPages %}
                        {% set class = i == page ? 'btn-primary' : 'btn-outline-primary' %}
                        <a class="btn {{ class }}" href="{{ path('users.medicament', {page: i, search: search, limit: limit, category: category_id}) }}">{{ i }}</a>
                    {% endfor %}
                </div>
            </div>
            <a href="{{ path('users.cart.view') }}" class="btn btn-success mt-3">Voir le panier</a>
        </div>
    </div>
{% endblock %}
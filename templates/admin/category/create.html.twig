{% extends "admin.html.twig" %}
{% block title %} Création de catégorie {% endblock %}
{% block stylesheets %}
     <link rel="stylesheet" href="{{asset('styles/register.css')}}">
     <link rel="stylesheet" href="{{asset('styles/content.css')}}">
{% endblock %}
{% block body %}
     <div class="registration container containers">
          <div class="wrapper">
          <h2>Ajouter une categorie</h2>
                    <form action="{{path('admin.category.store')}}" method="POST">
                         <div class="d-flex align-items-center justify-content-center flex-row">
                              <label for="" class="fw-bolder">Nom: </label>
                              <input type="text" name="nom" placeholder="Nom..." class="form-control ms-3">
                         </div>
                         <input type="submit" value="Enregistrer" class="btn btn-primary mt-3">
                    </form>
          </div>
     </div> 

{% endblock %}